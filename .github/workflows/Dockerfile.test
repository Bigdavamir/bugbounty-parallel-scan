# Dockerfile.test

# Use official Ubuntu 22.04 as a base image
FROM ubuntu:22.04

# Ensure noninteractive installs and UTF-8 locale
ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8 LC_ALL=C.UTF-8

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    ca-certificates \
    curl \
    git \
    golang-go \
    libssl-dev \
    pkg-config \
    unzip \
    wget \
  && rm -rf /var/lib/apt/lists/*

# Install Rust toolchain (for x8)
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y

# Ensure cargo bin is on PATH
ENV PATH="/root/.cargo/bin:${PATH}"

# Install x8 via cargo
RUN cargo install x8

# Install httpx (ProjectDiscovery)
RUN go install github.com/projectdiscovery/httpx/cmd/httpx@latest

# Install kxss
RUN go install github.com/Emoe/kxss@latest

# Set working directory for mounted volume
WORKDIR /workspace

# Use bash as entrypoint for interactive commands
ENTRYPOINT ["/bin/bash"]
