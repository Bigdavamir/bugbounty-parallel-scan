# Use Ubuntu 22.04 as base
FROM ubuntu:22.04

# Install system dependencies
RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y \
      curl build-essential ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# Install Rust toolchain (for cargo)
RUN curl https://sh.rustup.rs -sSf | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install x8 via cargo
RUN cargo install --force x8

# Verify x8 is installed
RUN which x8 && x8 --version

# Set working directory for testing
WORKDIR /workspace

# Default entrypoint to bash
ENTRYPOINT ["/bin/bash"]
