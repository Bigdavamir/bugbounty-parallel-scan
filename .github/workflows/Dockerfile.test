# Dockerfile.test - rocket stable

FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8 LC_ALL=C.UTF-8

RUN apt-get update && apt-get install -y \
    build-essential \
    ca-certificates \
    curl \
    git \
    golang-go \
    libssl-dev \
    pkg-config \
    unzip \
    wget \
 && rm -rf /var/lib/apt/lists/*

# Rust Install for x8
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install x8 using cargo
RUN cargo install x8

# Download and install httpx (prebuilt)
RUN wget https://github.com/projectdiscovery/httpx/releases/download/v1.6.2/httpx_1.6.2_linux_amd64.zip && \
    unzip httpx_1.6.2_linux_amd64.zip && \
    mv httpx /usr/local/bin/httpx && \
    chmod +x /usr/local/bin/httpx && \
    rm httpx_1.6.2_linux_amd64.zip LICENSE.md

# Install kxss using Go (no prebuilt for this)
RUN go install github.com/Emoe/kxss@latest && \
    cp /root/go/bin/kxss /usr/local/bin/kxss

WORKDIR /workspace

ENTRYPOINT ["/bin/bash"]
